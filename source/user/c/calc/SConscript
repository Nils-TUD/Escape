# -*- Mode: Python -*-

Import('env')

myenv = env.Clone()
builddir = Dir('$BUILDDIR/user/c/calc')
myenv.Append(
	CFLAGS = ' -DYYERROR_VERBOSE -I user/c/calc -I ' + builddir.abspath,
	LEXFLAGS = '--nounistd',
	YACCFLAGS = '-t -d'
)

lexer = myenv.CFile(target = 'lex.c', source = 'calc.l')
parser = myenv.CFile(target = 'parser', source = 'calc.y')

cfiles = [f for f in myenv.Glob('*.c') if 'lex.c' not in str(f) and 'parser.c' not in str(f)]
myenv.Depends(cfiles, [lexer, parser])

myenv.EscapeCProg('bin', target = 'calc', source = cfiles + [lexer, parser[0]])
